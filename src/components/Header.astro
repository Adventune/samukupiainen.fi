---
import { Github, Instagram, Menu, X } from '@lucide/astro';
---

<header
    class='w-full z-50 absolute'
    x-data='{ open: false }'
    x-effect="document.body.classList.toggle('overflow-hidden', open)"
>
    <nav class='w-full h-16 hidden md:flex'>
        <section
            id='nav_logo'
            class='flex flex-row py-6 px-8 gap-4 items-center justify-center border-l border-l-light-text/50 basis-1/3'
        >
        </section>
        <section
            class='flex flex-row py-6 px-8 gap-12 items-center justify-center border-l border-l-light-text/50 basis-1/3'
        >
            <a class='text-center no-underline text-light-text' href='/#about'>About me</a>
            <a class='text-center no-underline text-light-text' href='/#work'>Working experience</a>
            <a class='text-center no-underline text-light-text' href='/blog'>Blog</a>
        </section>
        <section
            id='nav_socials'
            class='flex flex-row py-6 px-8 gap-4 items-center justify-center border-l border-l-light-text/50 grow'
        >
            <a
                title='My instagram page'
                href='https://instagram.com/0x.samu'
                target='_blank'
                rel='noreferrer'
                class='text-light-text hover:text-primary-light cursor-pointer transition-all duration-500'
            >
                <Instagram />
            </a>
            <a
                title='My github page'
                href='https://github.com/adventune'
                target='_blank'
                rel='noreferrer'
                class='text-light-text hover:text-primary-light cursor-pointer transition-all duration-500'
            >
                <Github />
            </a>
        </section>
        <section
            id='nav_contact'
            class='flex flex-row py-6 px-8 gap-4 items-center justify-center border-l border-l-light-text/50 grow'
        >
        </section>
    </nav>

    <!-- Mobile -->
    <button
        class='md:hidden absolute top-4 right-4 z-50 text-light-text cursor-pointer'
        @click='open = ! open'
    >
        <div x-show='!open'>
            <Menu />
        </div>
        <div x-show='open'>
            <X />
        </div>
    </button>

    <nav
        x-show='open'
        x-transition
        class='h-screen w-screen bg-primary-dark flex flex-col p-8'
        @click='open = ! open'
    >
        <a class='text-2xl text-light-text no-underline' href='/#about'>About me</a>
        <a class='text-2xl text-light-text no-underline' href='/#work'>Working experience</a>
        <a class='text-2xl text-light-text no-underline' href='/blog'>Blog</a>
        <div class='flex flex-row gap-6 mt-auto'>
            <a href='https://instagram.com/0x.samu' target='_blank' rel='noreferrer'>
                <Instagram class='text-light-text hover:text-primary-light transition-colors' />
            </a>
            <a href='https://github.com/adventune' target='_blank' rel='noreferrer'>
                <Github class='text-light-text hover:text-primary-light transition-colors' />
            </a>
        </div>
    </nav>
</header>
<style>
    @reference "../styles/global.css";

    #nav_logo {
        @apply justify-start border-none;
    }
</style>
